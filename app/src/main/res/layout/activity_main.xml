<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splashBackgroundColor"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvInputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvOutputText"
        android:gravity="left"
        android:text=""
        android:textColor="@color/white"
        android:textSize="80sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvOutputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/container"
        android:gravity="right"
        android:text=""
        android:textColor="@color/white"
        android:textSize="100sp"
        android:textStyle="bold" />



    <LinearLayout
        android:background="@color/design_default_color_primary"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/btnAC"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_ac"
                android:layout_margin="10dp"
                android:padding="2dp"

                />

            <ImageView
                android:id="@+id/btnStartBracket"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_start_bracket"
                android:layout_margin="10dp"
                android:padding="2dp"
                />

            <ImageView
                android:id="@+id/btnEndBracket"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_end_bracket"
                android:layout_margin="10dp"
                android:padding="2dp"
                />

            <ImageView
                android:id="@+id/btnDivision"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_divide"
                android:layout_margin="10dp"
                android:padding="2dp"
                />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnSeven"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_7"
                android:layout_margin="10dp"
                android:padding="2dp"

                />

            <ImageView
                android:id="@+id/btnEight"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_8"
                android:layout_margin="10dp"
                android:padding="2dp"
                />

            <ImageView
                android:id="@+id/btnNine"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_9"
                android:layout_margin="10dp"
                android:padding="2dp"/>

            <ImageView
                android:id="@+id/btnMultiply"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_multiplication"
                android:layout_margin="10dp"
                android:padding="2dp"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnFour"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_4"
                android:layout_margin="10dp"
                android:padding="2dp"

                />

            <ImageView
                android:id="@+id/btnFive"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_5"
                android:layout_margin="10dp"
                android:padding="2dp"
                />

            <ImageView
                android:id="@+id/btnSix"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_6"
                android:layout_margin="10dp"
                android:padding="2dp"
                />

            <ImageView
                android:id="@+id/btnMinus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_minus"
                android:layout_margin="10dp"
                android:padding="2dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnOne"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_1"
                android:layout_margin="10dp"
                android:padding="2dp"

                />

            <ImageView
                android:id="@+id/btnTwo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_2"
                android:layout_margin="10dp"
                android:padding="2dp"
                />

            <ImageView
                android:id="@+id/btnThree"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_3"
                android:layout_margin="10dp"
                android:padding="2dp"
                />

            <ImageView
                android:id="@+id/btnAdd"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_plus"
                android:layout_margin="10dp"
                android:padding="2dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_0"
                android:visibility="invisible"
                android:layout_margin="10dp"
                android:padding="2dp"
                />

            <ImageView
                android:id="@+id/btnZero"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_0"
                android:layout_margin="10dp"
                android:padding="2dp"

                />

            <ImageView
                android:id="@+id/btnDot"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_dot"
                android:layout_margin="10dp"
                android:padding="2dp"/>

            <ImageView
                android:id="@+id/btnEqual"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_equal"
                android:layout_margin="10dp"
                android:padding="2dp"
                />

        </LinearLayout>


    </LinearLayout>




</RelativeLayout>